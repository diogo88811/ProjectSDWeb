<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

  <!-- devMode equals debug information and reload everything for every request -->
  <constant name="struts.devMode" value="true" />
  <constant name="struts.ui.theme" value="simple" />

  <package name="hey" extends="struts-default">
	
	<default-action-ref name="index" />
	
	<global-results>
		<result name="error">/error.jsp</result>
	</global-results>

	<!-- all exceptions not caught by the application will lead to error.jsp -->
	<global-exception-mappings>
		<exception-mapping exception="java.lang.Exception" result="error" />
	</global-exception-mappings>

	<!-- 'index' action leads to the view provided by index.jsp -->
    <action name="index">
      <result>/index.jsp</result>
    </action>

	<!-- 'login' action calls 'execute' in 'LoginAction' -->
    <action name="login" class="hey.action.LoginAction" method="execute">
      <result name="success">/initialPage.jsp</result>
      <result name="login">/index.jsp</result>
        <result name="error">/vote.jsp</result>
    </action>

      <action name="voteOnElection" >
          <result>/voteOnElections.jsp</result>
      </action>

      <action name="voteOnElectionAction" class="hey.action.showElectionsToUser" method="execute">
          <result name="success">/voteList.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="listToVoteAction" class="hey.action.voteListAction" method="execute">
          <result name="success">/vote.jsp</result>
          <result name="error">/index.jsp</result>
      </action>


      <action name="registerPersonAction" >
          <result>/register.jsp</result>
      </action>

      <action name="registPerson" class="hey.action.registerPersonAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="createElectionAction" >
          <result>/createElection.jsp</result>
      </action>

      <action name="createElection" class="hey.action.createElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="selectElectionAction" >
          <result>/selectElection.jsp</result>
      </action>

      <action name="selectElection" class="hey.action.selectElectionAction" method="execute">
          <result name="success">/infoList.jsp</result>
          <result name="error">/selectElection.jsp</result>
      </action>

      <action name="infoList" class="hey.action.infoListAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/infoList.jsp</result>
      </action>

      <action name="changeElectionAction" >
          <result>/changeElection.jsp</result>
      </action>

      <action name="changeElection" class="hey.action.changeElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="changeListAction">
          <result>/selectElectionToChangeList.jsp</result>
      </action>

      <action name="electionToChangeSelected" class="hey.action.selectElectionToChangeListAction" method="execute">
          <result name="success">/changeList.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="changeListSucess" class="hey.action.changeListAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>


      <action name="removeElectionAction" >
          <result>/selectElectionToRemove.jsp</result>
      </action>

      <action name="selectElectionToRemove" class="hey.action.removeElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="removeListAction" >
          <result>/selectElectionToRemoveList.jsp</result>
      </action>

      <action name="selectList" class="hey.action.selectElectionToRemoveListAction" method="execute">
          <result name="success">/removeList.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="removeList" class="hey.action.removeListAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

  </package>
</struts>