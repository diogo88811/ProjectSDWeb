<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

  <!-- devMode equals debug information and reload everything for every request -->
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple" />
    <constant name="struts.action.excludePattern" value="/ws"/>

  <package name="hey" extends="struts-default">
	
	<default-action-ref name="index" />
	
	<global-results>
		<result name="error">/error.jsp</result>
	</global-results>


	<!-- all exceptions not caught by the application will lead to error.jsp -->
	<global-exception-mappings>
		<exception-mapping exception="java.lang.Exception" result="error" />
	</global-exception-mappings>

	<!-- 'index' action leads to the view provided by index.jsp -->
    <action name="index">
      <result>/index.jsp</result>
    </action>

      <action name="initial">
          <result>/initialPage.jsp</result>
      </action>


      <action name="initial">
          <result>/initialPage.jsp</result>
      </action>

	<!-- 'login' action calls 'execute' in 'LoginAction' -->
    <action name="login" class="hey.action.LoginAction" method="execute">
      <result name="success">/initialPage.jsp</result>
      <result name="login">/index.jsp</result>
        <result name="error">/vote.jsp</result>
    </action>

      <action name="voteOnElection" >
          <result>/voteOnElections.jsp</result>
      </action>

      <action name="voteOnElectionAction" class="hey.action.showElectionsToUser" method="execute">
          <result name="success">/voteList.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="listToVoteAction" class="hey.action.voteListAction" method="execute">
          <result name="success">/vote.jsp</result>
          <result name="error">/index.jsp</result>
      </action>


      <action name="registerPersonAction" >
          <result>/register.jsp</result>
      </action>

      <action name="registPerson" class="hey.action.registerPersonAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="createElectionAction" >
          <result>/createElection.jsp</result>
      </action>

      <action name="createElection" class="hey.action.createElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="selectElectionAction" >
          <result>/selectElection.jsp</result>
      </action>

      <action name="selectElection" class="hey.action.selectElectionAction" method="execute">
          <result name="success">/electionOptions.jsp</result>
          <result name="error">/initialPage.jsp</result>
      </action>

      <!-- alterar a  funcao em que vai buscar as eleicoes  -->
      <action name="selectionElectionToResultAction" >
          <result>/selectElectionToResult.jsp</result>
      </action>

      <action name="selectionElectionToResult" class="hey.action.selectElectionAction" method="execute">
          <result name="success">/showElectionResult.jsp</result>
          <result name="error">/initialPage.jsp</result>
      </action>

     <action name="selectElectionViewAction">
         <result>/selectElectionToView.jsp</result>
     </action>

      <action name="selectElectionToView" class="hey.action.selectElectionAction" method="execute">
          <result name="success">/displayElectionData.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="changeElectionAction" >
          <result>/changeElection.jsp</result>
      </action>

      <action name="electionChanged" class="hey.action.changeElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="addListAction">
          <result>/addListToElection.jsp</result>
      </action>

      <action name="listCreated" class="hey.action.addListToElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/infoList.jsp</result>
      </action>

      <action name="changeListAction">
          <result>/selectList.jsp</result>
      </action>

      <action name="listSelected" class="hey.action.selectListToChangeAction" method="execute">
          <result name="success">/changeList.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="listChanged" class="hey.action.changeListAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="removeElectionAction" class="hey.action.removeElectionAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

      <action name="removeListAction">
          <result>/removeList.jsp</result>
      </action>

      <action name="removeList" class="hey.action.removeListAction" method="execute">
          <result name="success">/initialPage.jsp</result>
          <result name="error">/index.jsp</result>
      </action>

  </package>
</struts>